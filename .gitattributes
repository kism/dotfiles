# Auto detect text files and perform LF normalization
* text=auto
* text eol=lf
# Handle Windows nonsense ;)
*.ps1    text  eol=crlf
*.psm1   text  eol=crlf
*.psd1   text  eol=crlf
*.psc1   text  eol=crlf
*.ps1xml text  eol=crlf
*.clixml text  eol=crlf
*.xml    text  eol=crlf
# LFS
.terminfo/x/xterm-ghostty filter=lfs diff=lfs merge=lfs -text
.terminfo/g/ghostty filter=lfs diff=lfs merge=lfs -text
