exec swaync -s /home/kism/.config/swaync/style.css
exec nm-applet --indicator
exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store
exec_always nwg-autotiling
exec_always nwg-dock -r -p top -l overlay -a center -i 22 -hd 20 -lp start
exec_always nwg-panel
exec swayidle timeout 1200 nwg-lock timeout 1800 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' after-resume 'swaymsg "output * enable"'
exec nwg-update-indicator
exec_always nwg-screenshot-applet
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# Ensure that xdg-desktop-portal is installed, the following section will fix screen sharing
# sway does not set DISPLAY/WAYLAND_DISPLAY in the systemd user environment. See FS#63021
# Adapted from xorg's 50-systemd-user.sh, which achieves a similar goal.
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
exec hash dbus-update-activation-environment 2>/dev/null && \
dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
