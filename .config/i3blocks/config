# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
command=~/.config/i3blocks/scripts/$BLOCK_NAME
separator_block_width=11
markup=none

[window]
interval=-3
align=left

[cpu_usage]
label=CPU
interval=1
separator=false
color=#fc6f03


[temperature]
label=TEM
interval=5
color=#fc6f03

[memory]
label=RAM
separator=false
interval=30
color=#fc6f03

[memory]
label=SWP
instance=swap
separator=true
interval=30
color=#fc6f03

[inet]
label=NET
interval=once
command=sleep 5; curl ipv4.icanhazip.com
separator=false
color=#fc6f03

[iface]
#instance=wlan0
label=LAN
interval=10
separator=false
color=#fc6f03

[ssid]
#label=SSID
interval=10
separator=true
color=#fc6f03

[volume]
label=VOL
instance=Master
interval=once
signal=10
color=#fc6f03

[batterypl]
color=#fc6f03
markup=pango
#instance=BAT0
interval=30

[time]
command=date '+%Y%m%d %H:%M'
interval=15
color=#fc6f03

[trash]
command=echo -n $(whoami); echo -n "@"; echo $(hostname)
interval=once

